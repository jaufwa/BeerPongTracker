@model BeerPongTracker.Website.Models.Screen1ViewModel

<div class="row">
    <h2>Names of competitors:</h2>
</div>
<div class="row">
    <div class="team-input--outer">
        @Html.Partial("_TeamInput")
    </div>
</div>
<div class="screen__spacer"></div>
<div class="row">
    <h2>Number of cups:</h2>
</div>
<div class="row">
    <div class="number-of-cups-selector">
        <div class="number-of-cups-selector__img--wrapper">
            <img class="number-of-cups-selector__img" src="~/Content/Images/number_of_cups.png" />
            <div class="number-of-cups-selector__selection number-of-cups-selector__selection--6"></div>
            <div class="number-of-cups-selector__selection number-of-cups-selector__selection--10"></div>
            <div class="number-of-cups-selector__selection number-of-cups-selector__selection--15"></div>
        </div>
    </div>
</div>