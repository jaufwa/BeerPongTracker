@model BeerPongTracker.Website.Models.ScreenViewModel

<div class="screen screen--1" style="display: none;">
    <div class="screen__window">
        @Html.Partial("_1", Model.Screen1ViewModel)
    </div>
</div>
<div class="screen screen--2" style="display: none;">
    <div class="screen__window">
        @Html.Partial("_2", Model.Screen2ViewModel)
    </div>
</div>
<div class="screen screen--3">
</div>
<div class="screen screen--winner screen--4">
    @{ 
        var request = new BeerPongTracker.ApiClient.ContractObjects.DeclareWinnerRequest();
        request.WinningTeamId = 1;
        request.GameId = 1;
        var viewModel = new BeerPongTracker.Website.ViewBuilders.GameViewBuilder(new BeerPongTracker.ApiClient.Client.BeerBongTrackerApiClient("http://api.bpf.dev/api")).BuildWinnerScreenViewModel(request);
    }
    @Html.Partial("_4", viewModel)
    <script>
        $(document).ready(function () {
            BeerPongTracker.winScreen.init();
        });
    </script>
</div>
